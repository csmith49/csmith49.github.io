<div class="paper-card">
    <div class="location">{% if paper.location %}{{ paper.location }} {% endif %}{{ paper.year }}</div>
    <div class="body">
        <a class="title" href={{ paper.link }}>{{ paper.title }}</a>
        <ul class="authors">{% for author in paper.authors %}
            <li class="author">{{ author }}</li>
        {% endfor %}</ul>
        <ul class="notes">{% for note in paper.notes %}
            <li class="note">{{ note }}</li>
        {% endfor %}</ul>
    </div>
</div>